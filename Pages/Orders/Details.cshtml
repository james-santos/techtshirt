@page
@model techtshirt.Pages.Orders.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Order Status
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.status)
        </dd>
        <dt class="col-sm-2">
            Total Sale Price
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.total_sale_price)
        </dd>
        <dt class="col-sm-2">
            Total Pieces
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.total_pieces)
        </dd>
        <dt class="col-sm-2">
            Reference Code
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.reference_code)
        </dd>
        <dt class="col-sm-2">
            Order Date Placed
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.date_placed)
        </dd>
        <dt class="col-sm-2">
            Order Date Shipped
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.date_shipped)
        </dd>
        <dt class="col-sm-2">
            Customer ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.customer_id)
        </dd>
    </dl>
</div>
