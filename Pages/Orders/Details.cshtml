@page
@model techtshirt.Pages.Orders.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>
    Order: @Html.DisplayFor(model => model.Order.id)
</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Order Status
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.status)
        </dd>
        <dt class="col-sm-2">
            Total Sale Price
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.total_sale_price)
        </dd>
        <dt class="col-sm-2">
            Total Pieces
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.total_pieces)
        </dd>
        <dt class="col-sm-2">
            Reference Code
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.reference_code)
        </dd>
        <dt class="col-sm-2">
            Order Date Placed
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.date_placed)
        </dd>
        <dt class="col-sm-2">
            Order Date Shipped
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.date_shipped)
        </dd>
        <dt class="col-sm-2">
            Customer ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.customer_id)
        </dd>
    </dl>
</div>

 <div class="row">
    <div class="col-sm">
        <ul class="list-group list-group-flush">
            <h5>Overview</h5>
            <li class="list-group-item">Order Type: Sales Order
            </li>
            <li class="list-group-item">Status: @Html.DisplayFor(model => model.Order.status)
            </li>
            <li class="list-group-item">Date Ordered: @Html.DisplayFor(model => model.Order.date_placed)
            </li>
            <li class="list-group-item">Product Store: </li>
            <li class="list-group-item">Priority: Normal</li>
            <li class="list-group-item">Invoice Per Shipment: N/A</li>
        </ul>
    </div>
    <div class="col-sm">
        <ul class="list-group list-group-flush">
            <h5>Contact Information</h5>
            <li class="list-group-item">
                Name: @Html.DisplayFor(model => model.Order.Customer.first_name) @Html.DisplayFor(model => model.Order.Customer.last_name)
            </li>
            <li class="list-group-item">Order Notification Email Address: johnwickgmail.com</li>
            <li class="list-group-item">Shipping Destination Address: </li>
        </ul>
    </div>
    <div class="col-sm">
        <ul class="list-group list-group-flush">
            <h5>Payment Information</h5>
            <li class="list-group-item">Status History: Not-Received</li>
            <li class="list-group-item">Cash On Delivery: @Html.DisplayFor(model => model.Order.total_sale_price)
            </li>
        </ul>
    </div>
  </div>

  <div class="row">
      <div class="col-md-12">
            <!-- product totals table -->
        <h3 class="heading-level-2">Order Items</h3>
        <div class="table-responsive">
        <table class="table table-sm table-striped border rounded" id="totalTable">
            <thead>
                <tr class="titlerow">
                    <th>Inv Id</th>
                    <th>Inventory Product</th>
                    <th>Quantity</th>
                    <th>Unit Total</th>
                    <th>Sub Total</th>
                </tr>
            </thead>
            <tbody>
             @foreach (var item in Model.Order.Order_Inventory)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.InventoryId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Inventory.name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.order_qty)
                        </td>
                        <td>
                            $@Html.DisplayFor(modelItem => item.Inventory.sale_price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.total_sale_price)
                        </td>
                    </tr>
                }

            </tbody>

            </table>
        </div>
    </div>
  </div

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Order.id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
