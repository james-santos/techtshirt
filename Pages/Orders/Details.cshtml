@page
@model techtshirt.Pages.Orders.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>
    Order: @Html.DisplayFor(model => model.Order.id)
</h1>

 <div class="row">
    <div class="col-sm">

        <h4>Overview</h4>
        <table>
            <tbody>
            <tr>
                <td>
                    Order Type:
                </td>
                <td>
                    Sales Order
                </td>
            </tr>
            <tr>
                <td>
                    Reference Code:
                </td>
                <td>
                     @Html.DisplayFor(model => model.Order.reference_code)
                </td>
            </tr>
            <tr>
                <td>
                    Status:
                </td>
                <td>
                    @Html.DisplayFor(model => model.Order.status)
                </td>
            </tr>
            <tr>
                <td>
                    Date Ordered:
                </td>
                <td>
                    @Html.DisplayFor(model => model.Order.date_placed)
                </td>
            </tr>
            <tr>
                <td>
                    Product Store:
                </td>
                <td>
                    @Html.DisplayFor(model => model.Order.Customer.company)
                </td>
            </tr>
            <tr>
                <td>
                    Customer Type:
                </td>
                <td>
                    @Html.DisplayFor(model => model.Order.Customer.type)
                </td>
            </tr>
            <tr>
                <td>
                    Priority:
                </td>
                <td>
                    Normal
                </td>
            </tr>
            <tr>
                <td>
                    Invoice Per Shipment:
                </td>
                <td>
                    Invoice Per Shipment: N/A
                </td>
            </tr>
            </tbody>
        </table>
    </div>
    <div class="col-sm">
        <h4>Contact Information</h4>
        <table>
            <tbody>
            <tr>
                <td>
                    Name:
                </td>
                <td>
                    @Html.DisplayFor(model => model.Order.Customer.first_name) @Html.DisplayFor(model => model.Order.Customer.last_name)
                </td>
            </tr>
            <tr>
                <td>
                    Order Notification Phone:
                </td>
                <td>
                    @Html.DisplayFor(model => model.Order.Customer.phone)
                </td>
            </tr>
            <tr>
                <td>
                    Shipping Destination Address:
                </td>
                <td>
                    @Html.DisplayFor(model => model.Order.Customer.address)
                </td>
            </tr>
            </tbody>
        </table>
    </div>
    <div class="col-sm">

        <h4>Payment Information</h4>
        <table>
            <tbody>
            <tr>
                <td>
                    Status History:
                </td>
                <td>
                    Not-Received
                </td>
            </tr>
            <tr>
                <td>
                    Cash On Delivery:
                </td>
                <td>
                    $@Html.DisplayFor(model => model.Order.total_sale_price)
                </td>
            </tr>
            </tbody>
        </table>
    </div>
  </div>

  <div class="row">
      <div class="col-md-12">
            <!-- product totals table -->
        <h3 class="heading-level-2">Order Items</h3>
        <div class="table-responsive">
        <table class="table table-sm table-striped table-borderless" id="totalTable">
            <thead>
                <tr class="titlerow">
                    <th>Inv Id</th>
                    <th>Inventory Product</th>
                    <th>Quantity</th>
                    <th>Unit Total</th>
                    <th>Sub Total</th>
                </tr>
            </thead>
            <tbody>
             @foreach (var item in Model.Order.Order_Inventory)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.InventoryId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Inventory.name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.order_qty)
                        </td>
                        <td>
                            $@Html.DisplayFor(modelItem => item.Inventory.sale_price)
                        </td>
                        <td>
                            $@Html.DisplayFor(modelItem => item.total_sale_price)
                        </td>
                    </tr>
                }

                <tr>
                    <td>
                    </td>
                    <td>
                    </td>
                    <td>
                    </td>
                    <th>
                        Total Due
                    </th>
                    <td>
                        $@Html.DisplayFor(model => model.Order.total_sale_price)
                    </td>
                </tr>

            </tbody>

            </table>
        </div>
    </div>
  </div

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Order.id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
