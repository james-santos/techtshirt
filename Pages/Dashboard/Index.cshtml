@page
@model techtshirt.Pages.Dashboard.IndexModel
@{
    ViewData["Title"] = "Index";
}

<div>
    <h2 class="heading-level-2">Order Manager</h2>
    <div class="row">
        <div class="col-sm">
            <h4>Orders Received From 09/01/2019 to 09/30/2019</h4>
        </div>
        <div class="col-sm">
            <h4>Best Selling Products</h4>
            <div id="container" style="width:100%; height:400px;">

            </div>
        </div>
    </div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>

        var sourcearray = JSON.parse('@Html.Raw(Json.Serialize(Model.Order_Inventory))');
        console.log(sourcearray)

        document.addEventListener('DOMContentLoaded', function () {
        var myChart = Highcharts.chart('container', {
            chart: {
                type: 'pie'
            },
            title: {
                text: 'Best Selling Products'
            },
            xAxis: {
                categories: ['Apples', 'Bananas', 'Oranges']
            },
            yAxis: {
                title: {
                    text: 'Fruit eaten'
                }
            },
            series: [{
                name: 'Jane',
                data: [1, 0, 4]
            }, {
                name: 'John',
                data: [5, 7, 3]
            }]
        });
    });
    </script>
}
